{
  "compilerOptions": {
    "target": "es2016",                               
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": [
      "DOM",
      "ESNext"
    ],                                 
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                                             
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "noEmit": true,
    "isolatedModules": true,
    "resolveJsonModule": true                                 
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
]
}
